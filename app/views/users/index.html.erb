<h1>Listing All users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Lastname</th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.lastname %></td>
      <td><%= link_to 'Show', user_path(user) %></td>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
      <td><%= link_to 'Destroy', user_path(user),
             method: :delete,
             data: { confirm: 'Delete user ?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New user', new_user_path %>
